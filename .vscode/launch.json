    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: tests",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "cwd": "${workspaceFolder}/services",
            "args": ["conanci.test"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/services",
                "MYSQL_URL": "mysql.conan-ci",
                "VCS_DATA_DIR": "./temp"
            }
        },
        {
            "name": "Flask: public",
            "type": "python",
            "request": "launch",
            "module": "swagger_server",
            "cwd": "${workspaceFolder}/services/public",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/services",
                "MYSQL_URL": "mysql.conan-ci"
            }
        },
        {
            "name": "Flask: crawler",
            "type": "python",
            "request": "launch",
            "module": "swagger_server",
            "cwd": "${workspaceFolder}/services/crawler",
            "env": {
                "VCS_DATA_DIR": "./temp",
                "PYTHONPATH": "${workspaceFolder}/services",
                "MYSQL_URL": "mysql.conan-ci"
            }
        },
        {
            "name": "Flask: scheduler",
            "type": "python",
            "request": "launch",
            "module": "swagger_server",
            "cwd": "${workspaceFolder}/services/scheduler",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/services",
                "MYSQL_URL": "mysql.conan-ci"
            }
        },
        {
            "name": "Flask: agent",
            "type": "python",
            "request": "launch",
            "module": "swagger_server",
            "cwd": "${workspaceFolder}/services/agent",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/services",
                "MYSQL_URL": "mysql.conan-ci"
            }
        }
    ]
}